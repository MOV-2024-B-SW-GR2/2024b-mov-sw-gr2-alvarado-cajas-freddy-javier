<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_crud_power"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrudPower">

    <Button
        android:id="@+id/btn_guardar_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.781" />

    <Switch
        android:id="@+id/switch_offensive"
        android:layout_width="210dp"
        android:layout_height="36dp"
        android:layout_marginBottom="56dp"
        android:text="Activo"
        app:layout_constraintBottom_toTopOf="@+id/btn_guardar_power"
        app:layout_constraintEnd_toEndOf="@+id/btn_guardar_power"
        app:layout_constraintStart_toStartOf="@+id/btn_guardar_power" />

    <EditText
        android:id="@+id/input_effectiveness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:hint="Popularidad"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/switch_offensive"
        app:layout_constraintEnd_toEndOf="@+id/switch_offensive"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/switch_offensive" />

    <EditText
        android:id="@+id/input_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="DescripciÃ³n"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/input_effectiveness"
        app:layout_constraintEnd_toEndOf="@+id/input_effectiveness"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_effectiveness" />

    <EditText
        android:id="@+id/input_name_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:hint="Ingrese Obra"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_description"
        app:layout_constraintEnd_toEndOf="@+id/input_description"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_description" />

</androidx.constraintlayout.widget.ConstraintLayout>